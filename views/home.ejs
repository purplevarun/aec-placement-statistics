<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-uWxY/CJNBR+1zjPWmfnSnVxwRheevXITnMqoEIeG1LJrdI0GlVs/9cVSyPYXdcSF"
      crossorigin="anonymous"
    />
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Noto+Sans+Mono:wght@500&display=swap");
      * {
        font-family: "Noto Sans Mono", monospace;
      }
      body {
        background: black;
        color: white;
        text-align: center;
        margin-top: 60px;
      }
      #container {
        margin: 20px;
        margin-top: 70px;
        min-height: 50vh;
        text-align: center;
      }
      #varun {
        border: none;
        background: inherit;
        color: white;
        margin-bottom: 20px;
      }
      progress {
        width: 300px;
        height: 30px;
      }
      .upper-header {
        text-align: left;
      }
      .student-box {
        display: flex;
        flex-direction: column-reverse;
      }
    </style>
    <title>AEC Statistics ‚ù§</title>
    <script>
      const change = () => {
        document.getElementById("varun").innerHTML = "Varun Kedia";
      };
    </script>
  </head>
  <body>
    <div class="upper-header"><%- include ('./header.ejs') %></div>
    <div id="container">
      <h5>Welcome fellow Aecian</h5>
      <h5>
        <span style="color: yellow">(2018 - 2022)</span>
        (IT)
      </h5>

      <p><label for="prog">Total Students placed = <%= size %></label></p>

      <small>Click on a student to view details üòâ</small>
      <br />
      <br />
      <link
        rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css"
      />
      <!-- this button is now inside header -->
      <!-- <button class="btn btn-success btn-sm" onclick="location.assign('/add');">
        Add Student
      </button> -->
      <hr />
      <!-- sorter -->
      <style>
        .sorter {
          display: flex;
          flex-direction: column;
          justify-content: center;
          align-items: center;
        }
        .sorter-menu {
          /* background: grey; */
          width: 200px;
          border-radius: 20px;
          margin-top: 2px;
          display: flex;
          justify-content: center;
          align-items: center;
          flex-direction: column;
          display: none;
        }
        .sorter-menu button {
          margin-top: 5px;
        }
      </style>

      <div class="sorter">
        <button class="btn btn-sm btn-secondary" id="sorterbtn">
          Sort by <i class="fas fa-long-arrow-alt-down"></i>
        </button>
        <div class="sorter-menu" id="sortermenu" style="display: none">
          <button
            class="btn btn-sm btn-secondary"
            onclick="location.assign('/home/ctc')"
          >
            CTC
          </button>
          <button
            class="btn btn-sm btn-secondary"
            onclick="location.assign('/home/name')"
          >
            Student Name
          </button>
          <button
            class="btn btn-sm btn-secondary"
            onclick="location.assign('/home/company')"
          >
            Company Name
          </button>
        </div>
      </div>
      <!-- end of sorter -->
      <!-- Students -->
      <div class="student-box">
        <% student.forEach(stu=>{%> <%- include('student',
        {name:stu.name,company:stu.company,id:stu.id}) %> <%}) %>
      </div>
      <!--  -->
    </div>
    <small
      >Created by -
      <button id="varun" onclick="change()">Another Aecian</button>
    </small>
    <div class="counter">
      <small>Number of unique visitors :</small> <br />

      <!-- hitwebcounter Code START -->
      <a href="https://www.hitwebcounter.com" target="_blank">
        <img
          src="https://hitwebcounter.com/counter/counter.php?page=7879779&style=0025&nbdigits=5&type=ip&initCount=1"
          title="Free Counter"
          Alt="web counter"
          border="0"
      /></a>
    </div>
    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-kQtW33rZJAHjgefvhyyzcGF3C5TFyBQBA13V1RKPf4uH+bwyzQxZ6CmMZHmNBEfJ"
      crossorigin="anonymous"
    ></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
    <!--
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.min.js" integrity="sha384-PsUw7Xwds7x08Ew3exXhqzbhuEYmA2xnwc8BuD6SEr+UmEHlX8/MCltYEodzWA4u" crossorigin="anonymous"></script>
    -->
  </body>
  <script>
    const btn = document.getElementById("sorterbtn");
    const menu = document.getElementById("sortermenu");
    btn.onclick = () => {
      if (menu.style.display == "none") menu.style.display = "flex";
      else menu.style.display = "none";
    };
  </script>
</html>
